<div class="mx-auto p-5">
  <% content_for :title, "Posts" %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Posts</h1>
    <% if current_user %>
      <%= link_to "New post", new_post_path, class: "btn btn-accent" %>
    <% end %>
  </div>
  <div id="posts" class="min-w-full p-5">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post, class: "mt-2 btn btn-primary" %>
      </p>
    <% end %>
  </div>
</div>
