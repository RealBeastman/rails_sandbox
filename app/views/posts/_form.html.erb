<div class="mx-auto border-2 border-white rounded-lg p-5 mt-5 bg-base-200">
  <%= form_with(model: post, class: "contents") do |form| %>
    <% if post.errors.any? %>
      <div id="error_explanation" class="alert alert-error my-5">
        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="my-5 w-1/3">
      <%= form.label :title, class: "text-xl text-white" %>
      <%= form.text_field :title, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full text-black" %>
    </div>
    <div class="my-5">
      <%= form.label :body, class: "text-xl text-white" %>
      <%= form.text_area :body, rows: 4, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full text-black" %>
    </div>
    <div class="inline">
      <%= form.submit class: "btn btn-accent" %>
      <%= link_to "Back to posts", posts_path, class: "btn btn-secondary" %>
    </div>
    <%= form.hidden_field :user_id, value: current_user.id %>
  <% end %>
</div>